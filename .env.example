# OpenClaw VPS Configuration
# Copy to .env and fill in values: cp .env.example .env

# Docker image (default: pull from GHCR)
OPENCLAW_IMAGE=ghcr.io/phlongere/openclaw-vps:latest

# Gateway token (auto-generated by setup-vps.sh, or generate with: openssl rand -hex 32)
OPENCLAW_GATEWAY_TOKEN=change-me

# Gateway binding (lan = all interfaces inside container, accessed via loopback on host)
OPENCLAW_GATEWAY_BIND=lan
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_BRIDGE_PORT=18790

# Persistent directories on host
OPENCLAW_CONFIG_DIR=/home/openclaw/.openclaw
OPENCLAW_WORKSPACE_DIR=/home/openclaw/.openclaw/workspace

# === User-provided config ===

# Agent name (display name for the bot)
OPENCLAW_AGENT_NAME=Assistant

# AI Provider API key (OpenAI, Anthropic, etc.)
OPENAI_API_KEY=change-me

# Telegram bot config
TELEGRAM_BOT_TOKEN=change-me
TELEGRAM_ALLOWED_USER=change-me
